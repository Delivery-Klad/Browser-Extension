{
    "name": "Shorts remover",
    "description": "Remove shorts from youtube.com",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "48":"icons/48.png",
        "96":"icons/96.png"
    },
    "action": {
        "default_title": "Shorts remover",
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "scripting", "activeTab"],
    "background":{},
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "all_frames": true,
            "js": ["block.js"],
            "css": ["block.css"]
        }
    ]
}